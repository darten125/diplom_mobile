<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/thesisTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Тема заявки"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/checkMarkImageView"
        app:layout_constraintHorizontal_bias="0" />

    <TextView
        android:id="@+id/thesisDescriptionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Описание заявки"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/thesisTitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/checkMarkImageView" />

    <TextView
        android:id="@+id/professorNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Преподаватель"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/thesisDescriptionTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/checkMarkImageView" />

    <ImageView
        android:id="@+id/checkMarkImageView"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/check_mark"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>
